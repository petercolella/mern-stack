{
  "name": "mern-stack",
  "version": "1.0.0",
  "description": "MERN Stack Demo",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "server": "node server.js",
    "client": "cd client && npm run start start",
    "seed": "node scripts/seedDB.js",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/petercolella/mern-stack.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/petercolella/mern-stack/issues"
  },
  "homepage": "https://github.com/petercolella/mern-stack#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "if-env": "^1.0.4",
    "mongoose": "^5.4.5",
    "nodemon": "^1.18.9",
    "textbelt": "0.0.4"
  }
}
